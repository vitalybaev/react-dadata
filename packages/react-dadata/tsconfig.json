{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["es6", "es2017", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "strict": true,
    "target": "esnext",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "typeRoots": ["node_modules/@types", "typings"]
  },
  "include": [
    "./src/*",
    "./setupTests.ts"
  ]
}
